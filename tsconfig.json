{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
